<Window x:Class="Hexapawns.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hexapawns.WPF"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Hexapawn - MENACE Learning AI" Height="650" Width="1000"
        Background="#F5F5F5">
    
    <Window.Resources>
        <local:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:BoolToBeadColorConverter x:Key="BoolToBeadColorConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToHighlightConverter x:Key="BoolToHighlightConverter"/>
        <local:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#212121"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="StatStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Foreground" Value="#424242"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Game Board and Controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title and Score -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Hexapawn Game" Style="{StaticResource HeaderStyle}"/>
                <Border Background="White" Padding="15" Margin="0,0,0,10" 
                        CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="You" FontSize="16" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding HumanScore}" FontSize="32" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" Text="-" FontSize="32" FontWeight="Bold" Margin="20,0" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="AI" FontSize="16" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AiScore}" FontSize="32" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Status -->
            <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,15" 
                    CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                <TextBlock Text="{Binding StatusMessage}" FontSize="16" 
                          FontWeight="SemiBold" Foreground="#2196F3" TextAlignment="Center"/>
            </Border>
            
            <!-- Game Board -->
            <Border Grid.Row="2" Background="White" Padding="20" Margin="0,0,0,15"
                    CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                <local:BoardControl x:Name="BoardControl" GameState="{Binding CurrentState}"/>
            </Border>
            
            <!-- Control Buttons -->
            <StackPanel Grid.Row="3" Orientation="Vertical">
                <Button Content="New Game" Command="{Binding NewGameCommand}"/>
                <Button Content="Reset Score" Command="{Binding ResetScoreCommand}" Background="#FF9800"/>
                <Button Content="Reset AI Learning" Command="{Binding ResetLearningCommand}" Background="#F44336"/>
            </StackPanel>
        </Grid>
        
        <!-- Right Panel: MENACE Knowledge Base -->
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,15"
                    CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                <StackPanel>
                    <TextBlock Text="🧠 AI's Knowledge Base" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,5" Foreground="#666">
                        All matchboxes the AI has learned. Each position shows available moves with bead counts:
                    </TextBlock>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Margin="0,0,0,5">
                            <Run Text="🔵" FontWeight="Bold"/>
                            <Run Text="More beads = higher selection probability"/>
                        </TextBlock>
                        <TextBlock Margin="0,0,0,5">
                            <Run Text="✅" FontWeight="Bold" Foreground="Green"/>
                            <Run Text="Winning moves gain +3 beads" Foreground="Green"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="❌" FontWeight="Bold" Foreground="Red"/>
                            <Run Text="Losing moves lose -1 bead" Foreground="Red"/>
                        </TextBlock>
                        <TextBlock Margin="0,10,0,0" FontStyle="Italic" Foreground="#888">
                            <Run Text="⭐ = Current position"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Matchboxes Visual Grid -->
            <Border Grid.Row="1" Background="White" Padding="15" 
                    CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AllMatchboxes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="100" Height="80" 
                                        CornerRadius="8" 
                                        Padding="10" 
                                        Margin="5"
                                        BorderThickness="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Style.Triggers>
                                                <!-- Current position highlight -->
                                                <DataTrigger Binding="{Binding IsCurrentPosition}" Value="True">
                                                    <Setter Property="Background" Value="#FFF9C4"/>
                                                    <Setter Property="BorderBrush" Value="#FFD700"/>
                                                </DataTrigger>
                                                <!-- Just updated highlight (overrides current) -->
                                                <DataTrigger Binding="{Binding JustUpdated}" Value="True">
                                                    <Setter Property="Background" Value="#FFE0B2"/>
                                                    <Setter Property="BorderBrush" Value="#FF5722"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Position indicator -->
                                        <Border Grid.Row="0" Background="#333" CornerRadius="3" Padding="5" Margin="0,0,0,5">
                                            <Grid>
                                                <TextBlock Text="{Binding PositionHash}" 
                                                           FontFamily="Consolas" 
                                                           FontSize="9" 
                                                           Foreground="White"
                                                           TextTrimming="CharacterEllipsis"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="⭐" 
                                                           FontSize="12" 
                                                           Foreground="Gold"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Margin="0,-2,0,0"
                                                           Visibility="{Binding IsCurrentPosition, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- Beads visualization -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Moves}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Vertical" Margin="3" HorizontalAlignment="Center">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Style.Triggers>
                                                                    <!-- Pulse animation for just updated -->
                                                                    <DataTrigger Binding="{Binding JustUpdated}" Value="True">
                                                                        <DataTrigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                                                                    To="#FFF176" Duration="0:0:0.3" AutoReverse="True" RepeatBehavior="3x"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.EnterActions>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        
                                                        <!-- Before → After display -->
                                                        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,2"
                                                                   Visibility="{Binding JustUpdated, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <Run Text="{Binding PreviousBeadCount}" FontSize="9" Foreground="#999" TextDecorations="Strikethrough"/>
                                                            <Run Text="→" FontSize="9" Foreground="#FF5722" FontWeight="Bold"/>
                                                        </TextBlock>
                                                        
                                                        <!-- Visual bead representation -->
                                                        <ItemsControl ItemsSource="{Binding BeadCount}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Ellipse Width="8" Height="8" 
                                                                             Fill="{Binding DataContext.IsAvailable, RelativeSource={RelativeSource AncestorType=StackPanel}, Converter={StaticResource BoolToBeadColorConverter}}"
                                                                             Margin="1"/>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal" MaxWidth="40"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                        </ItemsControl>
                                                        <!-- Count number with highlight -->
                                                        <TextBlock Text="{Binding BeadCount}" 
                                                                   FontSize="11" 
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,2,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="{Binding IsAvailable, Converter={StaticResource BoolToBeadColorConverter}}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding JustUpdated}" Value="True">
                                                                            <Setter Property="Foreground" Value="#FF5722"/>
                                                                            <Setter Property="FontSize" Value="13"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            
            <!-- Learning Curve Chart -->
            <Border Grid.Row="2" Background="White" Padding="15" Margin="0,10,0,0"
                    CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="📈 Learning Curve" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <oxy:PlotView Grid.Row="1" Model="{Binding LearningCurvePlot}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
